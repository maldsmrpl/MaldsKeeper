@{
    ViewBag.Title = "Buy an Invisible Book";
}
<h2>Buy an Invisible Book</h2>
<br />
<p>Experience the power of imagination with our latest collection of Invisible Books. Perfect for those who love to read ... between the lines.</p>
<br />
<img src="~/img/book.webp" alt="Invisible Book" style="width:300px;height:300px;"/>
<form asp-action="ProcessDonation" method="post">
    <br />
    <label for="email">Your Email:</label>
    <input id="email" placeholder="email" valur="@User.Identity.Name" name="email" type="email" required />
    <label for="amount">Amount (in cents):</label>
    <input id="amount" name="amount" value="1000" type="number" min="500" step="1" required />
    <button type="submit">Donate Now</button>
</form>